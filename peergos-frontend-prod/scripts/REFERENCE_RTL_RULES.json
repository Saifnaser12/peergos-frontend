{
  "enabled": true,
  "dirSelector": "[dir=\"rtl\"]",
  "tailwindRtl": true,
  "requiredClasses": [
    "rtl:text-right",
    "rtl:mr-auto",
    "rtl:ml-auto", 
    "rtl:right-0",
    "rtl:left-auto",
    "rtl:border-r",
    "rtl:border-l-0"
  ],
  "requiredElements": [
    "html[dir=\"rtl\"]",
    "body[dir=\"rtl\"]"
  ]
}